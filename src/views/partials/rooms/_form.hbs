<div class="form-group">
  <label for="name">Name</label>
  <input type="text" name="name" placeholder="Enter room's name" class="form-control" value="{{ room.name }}">
</div>
<div class="form-group">
  <label for="description">Description</label>
  <input type="text" name="description" placeholder="Enter room's description" class="form-control" value="{{ room.description }}">
</div>

<div class="form-group">
  <label for="enable">Status</label>
  <input type="checkbox" name="enable" value="{{ room.enable }}" {{checkedIf room.enable}}>
  <label for="enable">
    Enable/Disable
  </label>
</div>

<div class="form-group">
  <button type="submit" class="btn btn-primary">Save</button>
</div>
